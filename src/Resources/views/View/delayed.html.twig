{% extends "SplashWidgetsBundle:Widget:base.html.twig" %}

{% block widget_box %}
    {% if Options.Border %}
    <div class="panel panel-warning">
    {% endif %}    
        
        <div class="text-center">
            <i class="fa fa-spinner fa-pulse fa-3x fa-fw"  aria-hidden="true"></i>
            <span class="sr-only">Loading your widget...</span>    
        </div>
        
        {% set Url = path('splash_widgets_render_widget', { 
            'service': Service,  
            'type' : WidgetType, 
            'options' : Options | json_encode(), 
            "parameters" : Parameters 
        }) %}
        
        <script>
            $(document).ready(function() {
                SplashWidgets_AjaxLoading("{{ WidgetType ~ "-" ~ WidgetId }}", "{{ Url }}");
            });
        </script>
        
    {% if Options.Border %}
    </div>    
    {% endif %}    
{% endblock %}
