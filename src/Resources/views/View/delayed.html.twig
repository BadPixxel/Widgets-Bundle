{% extends "SplashWidgetsBundle:Widget:base.html.twig" %}

{% block widget_box %}
    {% if Options.Border %}
    <div class="panel panel-warning">
    {% endif %}    
        
        <div class="text-center">
            <i class="fa fa-spinner fa-pulse fa-3x fa-fw"  aria-hidden="true"></i>
            <span class="sr-only">Loading your widget...</span>    
        </div>
        
        <script>
            $(document).ready(function() {
                SplashWidgets_AjaxLoading("{{ WidgetType ~ "-" ~ WidgetId }}", "{{ path('splash_widgets_render_widget', { 'Service': Service,  'Type' : WidgetType, 'Options' : Options | json_encode(), "Parameters" : Parameters }) }}");
            });
        </script>
        
    {% if Options.Border %}
    </div>    
    {% endif %}    
{% endblock %}
