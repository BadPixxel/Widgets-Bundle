{% trans_default_domain "SplashWidgetsBundle" %}   

{% if Widget.Options.EditMode | default(false) %}
    
    {% set editUrl = path('splash_widgets_edit_widget', { 
        'service': Widget.Service,  
        'type' : Widget.Type,
    }) %}
    
    <button class="btn btn-xs btn-primary splash-widget-edit text-xs py-1 px-2" 
        data-target="{{ Widget.Type ~ "-" ~ WidgetId }}"
        data-edit="{{ editUrl }}"
        >
        <i class="fa fa-fw fa-cog"></i>
            {{ "widget.params" | trans }}
    </button>
{% endif %}        

    