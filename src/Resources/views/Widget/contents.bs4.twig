
{% if Widget.options.EditMode | default(false) %}
    {% set Style = "opacity: 1; box-shadow: 10px 35px 5px #D9EDF7; margin-bottom: 5px; z-index: 0;" %}
{% else %}
    {% set Style = "opacity: 1;" %}
{% endif %}

{% if Widget.options.Border %}
<div 
    class="card border-{{ Widget.Options.Color | default("default") }}" 
    style="{{ Style }}"
    >
{% endif %}

    {# Widget Contents #}
    {% block widget_container %}
    
        {#  Widget Header #}
        {% block widget_Header %}
            {% include '@SplashWidgets/Widget/Core/header.bs4.twig'%}
        {% endblock %}  


        {# Widget Contents #}
        {% block widget_contents %}
            <div class="row no-padding" >
                {# Widget Block Row #}
                {% block widget_row %}
                    {% if Widget.Blocks is defined %}
                        {% include '@SplashWidgets/Widget/Blocks/row.html.twig'%}
                    {% endif %}
                    {% if Widget.Contents is defined %}
                        {{ Widget.Contents | raw }}  
                    {% endif %}
                    
                {% endblock %}  
            </div>                    
        {% endblock %}  


        {# Widget Footer #}
        {% block widget_footer %}
            {% include '@SplashWidgets/Widget/Core/footer.bs4.twig'%}
        {% endblock %}  

    {% endblock %} 
    
{% if Widget.options.Border %}
</div> 
{% endif %}
    
    
{% if Widget.options.EditMode | default(false) %}
{#    <div class="col-xs-12 pull-right text-right text-primary" style="margin-bottom: 10px;">    #}
    <div class="pull-right text-right d-none d-md-block px-3" style="position: relative;">    
        {% block widget_buttons %}
            {% include '@SplashWidgets/Widget/Buttons/edit.html.twig'%}
            {% include '@SplashWidgets/Widget/Buttons/remove.html.twig'%}
        {% endblock %}  
    </div> 
{% endif %}


 