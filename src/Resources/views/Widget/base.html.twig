
{% if Widget is defined %}
    {% set Width = Widget.Options.Width %}
{% elseif Options is defined %}
    {% set Width = Options.Width %}
{% else %}
    {% set Width = "col-12 col-sm-12 col-md-6 col-lg-6" %}
{% endif %}

{% set Mode = Widget.Options.Mode | default("bs4")  %}

{% if Widget is defined %}
    {% set WidgetType = Widget.Type %}
    {% set Options    = Widget.Options %}
    {% set Parameters = Widget.Parameters | json_encode %}  
{% endif %}

<div    class="{{ Options.Class|default("splash-widget mb-3")}} {{ Width }} " id="{{ WidgetType ~ "-" ~ WidgetId }}"
        data-id="{{ WidgetType }}"
    >
    
    {#  Widget Contents Envelope #}
    {% block widget_box %}
        {% include '@SplashWidgets/Widget/contents.'~Mode~'.twig' %}  
    {% endblock %}                 
</div>