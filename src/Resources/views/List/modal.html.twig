{% trans_default_domain "SplashWidgetsBundle" %}   

<div class="modal-dialog modal-lg" role="document" style="z-index:2000;">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">        
                {{ 'list.title'|trans }}
                <small class="mb-0">{{ 'list.tooltip'|trans }}</small>
                <button type="button" class="close d-none" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </h4>
            <button type="button" class="close hidden" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
            
        <div class="modal-body">
            {% include 'SplashWidgetsBundle:List:contents.html.twig' %} 
        </div>
            
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
            
    </div>
</div><!-- /.modal-dialog -->
