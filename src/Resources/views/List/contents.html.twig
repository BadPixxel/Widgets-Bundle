{% trans_default_domain "SplashWidgetsBundle" %} 

<!-- Nav tabs -->
<ul class="nav nav-pills nav-justified nav-fill mb-2">
    {% for Tab in Tabs %}
        <li class="nav-item {% if loop.first %}active{% endif %}">
            <a class="nav-link" href="#tab-{{ Tab.id }}" aria-controls="tab-{{ Tab.id }}" role="tab" data-toggle="tab">
                {{ Tab.label | raw }}
            </a>
        </li>
    {% endfor %}
</ul>

<!-- Tab panes -->
<div class="tab-content">
    
    {% for Tab in Tabs %}
        <div role="tabpanel" class="tab-pane {% if loop.first %}active{% endif %}" id="tab-{{ Tab.id }}">

            <table class="table table-bordered table-striped no-padding"  role="content" id='splash-widgets-list'>
                <thead>
                    <tr>
                        <th> 
                            {{ 'list.name'|trans }}
                        </th>
                        <th> 
                            {{ 'list.desc'|trans }}
                        </th>
                        <th class="text-center">
                            {{ 'list.actions'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for Index in Tab.widgets %}
                        {% include 'SplashWidgetsBundle:List:item.html.twig' with {'Widget': Widgets[Index] } %} 
                    {% endfor %}
                </tbody>
            </table>
            
        </div>
    {% endfor %}

</div>



