{
    "name":             "badpixxel/widgets-bundle",
    "description":      "Easy Widgets & Information boxes for Symfony Applications",
    "type":             "symfony-bundle",
    "keywords":         ["Symfony", "Bundle", "Widget", "PHP", "Simple", "Bootstrap"],
    "homepage":         "https://www.badpixxel.com",
    "license":          "MIT",
    "prefer-stable":    true,
    "minimum-stability": "dev",

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "autoload": {
        "psr-4": { "Splash\\Widgets\\": "src" }
    },

    "autoload-dev": {
        "psr-4": { "Splash\\Widgets\\Tests\\": "tests" },
        "classmap": [ "app/AppKernel.php" ]
    },
    
    "require": {
        "php":                                          "^7.4|^8.0",
        "ext-json":                                     "*",

        "symfony/monolog-bundle":                       "^2.0|^3.0",
        
        "doctrine/orm":                                 "^2.5",
        "doctrine/doctrine-bundle":                     "^1.6|^2.0",
        
        "knplabs/knp-time-bundle":                      "~1.6",
        "knplabs/knp-menu-bundle":                      "~2.0|~3.0",
        
        "sonata-project/block-bundle":                  "~3.0|~4.0"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                            "dev-main",

        "symfony/symfony":                              "~4.4",
        "symfony/phpunit-bridge":                       "^3.0",
        "symfony/webpack-encore-bundle":                "^1.7",
        "twig/twig":                                    "~2.6",

        "sonata-project/admin-bundle":                  ">=3.0",
        
        "splash/php-bundle":                            "dev-master",
        "splash/console":                               "dev-master"
    },
    
    "scripts": {
        "auto-scripts": [
            "php bin/console cache:clear",
            "php bin/console assets:install web --relative"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ]
    },
    
    "extra": {
        "symfony-app-dir":                          "app",
        "symfony-bin-dir":                          "bin",
        "symfony-var-dir":                          "var",
        "symfony-web-dir":                          "web"
    },
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
