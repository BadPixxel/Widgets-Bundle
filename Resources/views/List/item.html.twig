{% trans_default_domain "SplashWidgetsBundle" %} 

<tr>
    <td>
        {{ Widget.Origin }}
    </td>
    <td>
        {% if Widget.Icon %}
            <i class="{{ Widget.Icon }}" aria-hidden="true"></i>
        {% endif %}
        {{ Widget.Name }}
    </td>
    <td>
        {{ Widget.Description }}
    </td>
    <td>
        {% set AddAction = "SplashWidgets_AddToCollection('" ~ CollectionId ~ "','" ~ Widget.Service ~ "','" ~ Widget.Type ~ "')" %}
        <a href="javascript:void(0);" class="btn btn-sm btn-labeled btn-info" onclick="{{ AddAction }}"> 
            <span class="btn-label">
                <i class="fa fa-fw fa-plus-circle"></i>
            </span>
            {{ "list.add" | trans}} 
        </a>
    </td>
</tr>

            
 
