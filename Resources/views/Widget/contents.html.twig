<div 
    class="panel panel-default {#{% if Edit %}bg-color-redLight{% endif %}#}" 
    style="opacity: 1; {% if Edit | default(false) %}box-shadow: 10px 10px 5px #B09B5B;{% endif %}"
    >
    
    {# Widget Contents #}
    {% block widget_container %}
    
        {#  Widget Header #}
        {% block widget_Header %}
            {% include 'SplashWidgetsBundle:Widget/Core:header.html.twig'%}  
        {% endblock %}  


        {# Widget Contents #}
        {% block widget_contents %}
            <div class="row no-padding" >
                {# Widget Block Row #}
                {% block widget_row %}
                    {% include 'SplashWidgetsBundle:Widget/Blocks:row.html.twig'%}  
                {% endblock %}  
            </div>                    
        {% endblock %}  


        {# Widget Footer #}
        {% block widget_footer %}
            {% include 'SplashWidgetsBundle:Widget/Core:footer.html.twig'%}  
        {% endblock %}  

    {% endblock %}                 
</div> 


 