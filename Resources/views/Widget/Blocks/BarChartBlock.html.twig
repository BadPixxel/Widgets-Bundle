{% trans_default_domain "SplashWidgetsBundle" %}   
{% import "SplashWidgetsBundle:Macros:widgets.html.twig" as Wid %}

{#
    Spark Info
#}
<div class="text-center">
{% if Block.title is not empty %}
    <h5> 
        {{ Wid.Text(Block.title,Block.Options) }} 
    </h5>
{% endif %}
            
{% if Block.Values is not empty %}                
    <div 
        class="sparkline"
{#        data-sparkline-type="line" #}
        data-sparkline-height="200px"
        data-sparkline-barwidth="20"
        data-sparkline-width="96%"
        >
        {% for Value in Block.Values %} 
            {{Value}}{% if not loop.last %},{% endif %}
        {% endfor %} 
    </div>  
{% endif %}

</div>

