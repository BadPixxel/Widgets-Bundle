{% trans_default_domain "SplashWidgetsBundle" %}   

    <h3 class="page-title txt-color-blueDark"><i class="fa fa-fw fa-info-circle "></i>
        Widget Collections Displays
    </h3>

    <table class="table table-bordered">
        
        <thead>
            <td>
                Identifier
            </td>
            <td>
                Service
            </td>
            <td>
                Views (Forced / Normal / Cached)
            </td>
        </thead>
       {{ dump(Collection) }}
        {% for Widget in Collection.Widgets %}

        <tr>
            <td>
                {{ Widget.identifier }}
            </td>
            <td>
                {{ Widget.service }}
            </td>
            <td width="70%">
                <div class="row padding-10">
                    {{ render(controller('SplashWidgetsBundle:View:forced', { 'Service' : Widget.service,  'WidgetId' : Widget.identifier })) }}
                    {{ render(controller('SplashWidgetsBundle:View:delayed', { 'Service' : Widget.service,  'WidgetId' : Widget.identifier })) }}
{#                    {{ render(controller('SplashWidgetsBundle:View:forced', { 'Service' : Widget.service,  'WidgetId' : Widget.identifier })) }}#}
                </div>
            </td>
        <tr>

        {% endfor %}
        
    </table>

